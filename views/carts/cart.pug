extends ../layouts/common.pug

block variable
  - var title = 'Cart'
block style
  link(rel="stylesheet", href="/assets/css/cart.css")
block content
  .container.mt-3
    if arrCart == false
      .row.justify-content-center
        img.cart__empty(src="/sources/img/cart-empty.png", alt="")
    else
      h4 Carts Activity
      table.table.table-hover
        thead
          tr
            th(scope='col') 
            th(scope='col') Title Book
            th(scope='col') Timeout
            th(scope='col') 
        tbody
          each elm in arrCart
            tr
              td(scope='row')
                if elm.avatarUrl
                  a(href="/books/view/" + elm.idBook)
                    img.cart__image(src=elm.avatarUrl)
                else
                  img.cart__image(src='/sources/img/book-default.jpg', alt="")

              td
                a(href="/books/view/" + elm.idBook)= elm.title
              td= elm.timeout
              td
                a.btn.btn-danger.font-weight-bold(href="/carts/delete/" + elm.idCart, type="submit") Remove
