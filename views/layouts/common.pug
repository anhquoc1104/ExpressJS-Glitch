  .wrapper
    block content
    block pagination
      .container.pagination
        .row
          nav.mt-4(aria-label='Page navigation example')
            ul.pagination
              //- pre
              if page == 1
                li.page-item.disabled
                  a.page-link(href='#')
                    span &laquo;
              else
                li.page-item
                  a.page-link(href=route + page5Num[1])
                    span &laquo;
              //- 123
              if totalPage <= 1
                li.page-item.active.disabled
                  a.page-link(href=route + val) 1
              else if totalPage == 2
                each val in [1, 2]
                  if val == page
                    li.page-item.active.disabled
                      a.page-link(href=route + val)= val
                  else
                    li.page-item
                      a.page-link(href=route + val)= val
              else if page == totalPage
                each val in [page5Num[0],page5Num[1],page5Num[2]]
                  if val == totalPage
                    li.page-item.active.disabled
                      a.page-link(href=route + val)= val
                  else
                    li.page-item
                      a.page-link(href=route + val)= val
              else
                each val in [page5Num[1], page5Num[2], page5Num[3]]
                  if val == page
                    li.page-item.active.disabled
                      a.page-link(href=route + val)= val
                  else
                    li.page-item
                      a.page-link(href=route + val)= val
              //- next
              if page == totalPage || totalPage <= 1
                li.page-item.disabled
                  a.page-link(href='#')
                    span &raquo;
              else
                li.page-item
                  a.page-link(href=route + page5Num[3])
                    span &raquo;
  block liveChat
    .msg__box
      .msg__minimize.bg-success
        i.msg__minimize__icon.fas.fa-comments
      .contentArea(style='display: none')
        .msg__head.bg-success Customer Support
        .formArea
          .title Please fill out this form
          form.inputFields
            .inputContainer.form-group
              input.nameInput.form-control(type='text', maxlength='20', pattern='^[a-zA-Z ]{3,}', placeholder=' * Name', required='')
            .inputContainer.form-group
              input.emailInput.form-control(type='email', placeholder=' * Email', required='')
            input.submitBtn.bg-success(type='submit')
        .chatArea(style='display: none')
          .messages
            .msg__push--old
            .msg__push--new
            .typing
          input.form-control.inputMessage(rows="1" placeholder="Type here...")
