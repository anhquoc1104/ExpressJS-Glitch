extends ../layouts/common.pug

block content
  .container.mr-5.mt-3
    form(action="", method="POST")
      input(type="text", name="name")
      span &nbsp
      button(type="submit") Search
      h4 Detail User
      .container
        .row
          .col
            h6= isUser.name
            h6= isUser.email
          .col
            if isUser.avatarUrl
              img(src=isUser.avatarUrl)
            else
              img(src="https://res.cloudinary.com/anhquoc1104/image/upload/c_scale,h_50,w_50,r_20/v1589899817/test_CodersX/d8b07ffa86196b473208_h5baxw.jpg")
        a(href="/users/edit/" + isUser._id) edit
        br
        if isUser.isAdmin == "true"
          a(href="/users/add") add new user
          br
          h4 User List
          .container
            .row
              each users in user
                ul
                  li
                    span= users.name
                    br
                    span= users.email
                    span &nbsp
                    a(href="/users/remove/" + users._id) Remove
        a(href="/logout") Logout
block footer