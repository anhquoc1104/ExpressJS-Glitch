extend ../layouts/statusLayout.pug

block style
    link(rel="stylesheet", href="/assets/css/account.css")
block variable
    - var title = 'Resend Email'
block content
    .container
        .row.justify-content-center.mt-5
            .col-md-4.col-md-offset-4
                .card.rounded
                    .card-body
                        .text-center
                            h3
                            i.fa.fa-lock.fa-4x
                            h2.text-center Your Link Expired
                            p Your Can Check Again
                            .card-body
                                form#register-form.form(role='form', autocomplete='off', method='post', action="/auth/resendemail/" + pathRoute)
                                    .form-group.d-none
                                        .input-group
                                            span.input-group-addon
                                            i.glyphicon.glyphicon-envelope.color-blue
                                            input#email.form-control(name='idUser', type='text', value=idUser)
                                            i.glyphicon.glyphicon-envelope.color-blue
                                            input#email.form-control(name='email', type='email', value=email)
                                    .form-group
                                        button.btn.btn-lg.btn-primary.btn-block(type='submit') Resend Email
                            a.mt-2(href="/") Go Home