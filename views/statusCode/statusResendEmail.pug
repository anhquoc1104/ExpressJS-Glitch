extend ../layouts/statusLayout.pug

block style
    link(rel="stylesheet", href="/assets/css/account.css")
block variable
    - var title = 'Success'
block content
    .container
        .row.justify-content-center.mt-5
            .col-md-4.col-md-offset-4
                .card.rounded
                    .card-body
                        .text-center
                            h3
                            i.fa.fa-lock.fa-4x
                            h2.text-center Can I Help You?
                            p Your Email Into Here
                            .card-body
                                form#register-form.form(role='form', autocomplete='off', method='post', action="/auth/resendemail/" + routePath)
                                    .form-group
                                        .input-group
                                            span.input-group-addon
                                            i.glyphicon.glyphicon-envelope.color-blue
                                            input#email.form-control(name='email', placeholder='email address', type='email')
                                    .form-group
                                        button.btn.btn-lg.btn-primary.btn-block(type='submit') Send
                            a.mt-2(href="/") Go Home