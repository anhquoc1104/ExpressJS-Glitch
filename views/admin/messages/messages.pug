extends ../layouts/common.pug

block variable
	- var title = 'Messages Support'

block style
	link(rel='stylesheet', href='/assets/css/admin/liveChat.css')

block content 
	.container-fluid.m-auto.msg__support
		.row.inbox__msg
			.col-4.col-sm-4.col-md-4.col-lg-3.px-0.users
				h5.users__heading Messenger
				.users__body

			.col-8.col-sm-8.col-md-8.col-lg-9.d-flex.flex-column.justify-content-end.message
				.msg__history.d-flex.flex-column.flex-column-reverse
					.msg__push--old
					.msg__push--new
					
	audio#chatSound
		source(src='/assets/sounds/new_message.mp3', type='audio/mpeg')

